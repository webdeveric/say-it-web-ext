{
  "root": true,
  "extends": [
    "@webdeveric/eslint-config-ts",
    "eslint-config-prettier",
    "plugin:no-unsanitized/DOM",
    "plugin:react/recommended",
    "plugin:react-hooks/recommended",
    "plugin:jsx-a11y/recommended"
  ],
  "rules": {
    "jsx-a11y/no-onchange": "off"
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "overrides": [
    {
      "files": [
        "**/*.tsx"
      ],
      "rules": {
        "react/prop-types": "off"
      }
    }
  ],
  "env": {
    "webextensions": true,
    "es6": true,
    "jest": true
  }
}
